<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:clipToPadding="false"
    android:layout_marginEnd="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/scrollable_section_location_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:elevation="3dp"
        android:layout_gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/scrollable_section_location_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Starbucks"
        android:layout_marginStart="10dp"
        android:textColor="@color/dark"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_marginTop="3dp"
        android:textStyle="bold"
        android:textAppearance="@style/Subtitle1"
        app:layout_constraintTop_toBottomOf="@id/scrollable_section_location_image"
        app:layout_constraintStart_toStartOf="parent"/>

    <RatingBar
        android:id="@+id/scrollable_section_location_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/ratingBarStyleSmall"
        app:layout_constraintStart_toStartOf="@id/scrollable_section_location_title"
        app:layout_constraintTop_toBottomOf="@id/scrollable_section_location_title"/>

</androidx.constraintlayout.widget.ConstraintLayout>